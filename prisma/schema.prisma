generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String           @id @default(cuid())
  name             String?
  email            String?          @unique
  emailVerified    Boolean          @default(false)
  image            String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  username         String           @unique
  displayUsername  String?
  banReason        String?
  bannedUntil      DateTime?
  isBanned         Boolean          @default(false)
  bannedAt         DateTime?
  role             Roles?           @default(Fish)
  Roblox_Account   Roblox_Account[]
  accounts         Account[]
  gameBets         GameBet[]
  games_as_player1 Game[]           @relation("GamePlayer1")
  games_as_player2 Game[]           @relation("GamePlayer2")
  games_won        Game[]           @relation("GameWinner")
  sessions         Session[]
  user_pets        User_pets[]

  @@map("user")
}

enum Roblox_Account_Status {
  REQUEST
  DEAD
  ALIVE
  CHECKING
  DONE
}

enum Roblox_Account_Type {
  WITHDRAW
  DEPOSIT
  DONE
}

model Roblox_Account {
  id        String                @id @default(cuid())
  userId    String                @unique
  username  String?
  password  String?
  cookie    String?
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  status    Roblox_Account_Status @default(REQUEST)
  type      Roblox_Account_Type   @default(DEPOSIT)
  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Bot {
  id        String    @id
  name      String
  bot_link  String
  status    BotStatus @default(UNAVAILABLE)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Pet_types {
  id      String      @id @default(cuid())
  name    String
  variant PetVariant  @default(NORMAL)
  ride    Boolean     @default(false)
  fly     Boolean     @default(false)
  value   Decimal     @db.Decimal(10, 4)
  image   String?
  petkind String?
  pets    User_pets[]

  @@unique([name, variant, ride, fly])
  @@map("pet_types")
}

model User_pets {
  id             String    @id @default(cuid())
  user_id        String
  pet_type_id    String
  locked_game_id String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  status         PetStatus @default(AVAILABLE)
  gameBets       GameBet[]
  pet_type       Pet_types @relation(fields: [pet_type_id], references: [id])
  user           User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status])
  @@index([locked_game_id])
  @@map("user_pets")
}

model Game {
  id              String     @id @default(cuid())
  player1_id      String
  player2_id      String?
  status          GameStatus @default(WAITING)
  player1_side    CoinSide
  result          CoinSide?
  winner_user_id  String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  resultCreatedAt DateTime?
  resultIdFromApi String?
  bets            GameBet[]
  player1         User       @relation("GamePlayer1", fields: [player1_id], references: [id], onDelete: Cascade)
  player2         User?      @relation("GamePlayer2", fields: [player2_id], references: [id], onDelete: Cascade)
  winner          User?      @relation("GameWinner", fields: [winner_user_id], references: [id])

  @@index([player1_id])
  @@index([player2_id])
  @@index([status])
  @@map("games")
}

model GameBet {
  id             String    @id @default(cuid())
  game_id        String
  user_id        String
  user_pet_id    String
  value_snapshot Decimal   @db.Decimal(10, 4)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  game           Game      @relation(fields: [game_id], references: [id], onDelete: Cascade)
  user           User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_pet       User_pets @relation(fields: [user_pet_id], references: [id], onDelete: Cascade)

  @@unique([game_id, user_pet_id])
  @@index([game_id, user_id])
  @@map("game_bets")
}

enum Roles {
  Fish
  Dolphin
  Shark
  Whale
  Admin
  Owner
}

enum BotStatus {
  AVAILABLE
  UNAVAILABLE
}

enum PetVariant {
  NORMAL
  NEON
  MEGA
}

enum PetStatus {
  AVAILABLE
  LOCKED
  ON_WITHDRAW
  WITHDRAWED
}

enum GameStatus {
  WAITING
  SETTLED
  CANCELLED
}

enum CoinSide {
  HEADS
  TAILS
}
